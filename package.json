{
  "name": "dialoga",
  "version": "1.0.0",
  "description": "ConvoFlow es una aplicación de mensajería en tiempo real desarrollada con React, Express, WebSockets y MongoDB. Permite registro de usuarios, búsqueda de contactos y chats con texto e imágenes en Base64, mostrando los mensajes más recientes y cargando historial con scroll. Incluye autenticación con JWT y arquitectura lista para escalar con microservicios.",
  "repository": {
    "type": "git",
    "url": "SebastianWepApp"
  },
  "license": "ISC",
  "author": "Mateo Espinosa",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "build": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "crypto": "1.0.1",
    "dotenv": "17.2.2",
    "express": "5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "8.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "24.5.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "30.1.3",
    "nodemon": "3.1.10",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  }
}
